<%- include("layout") %>

<section class="container reveal">
  <h2 class="section-title">Contact Me</h2>

  <% if (success) { %>
    <div class="alert alert-success">Message sent successfully!</div>
  <% } %>

  <form method="POST" action="/contact" class="glass-form">
    <input class="form-control mb-3" name="name" placeholder="Your Name" required>
    <input class="form-control mb-3" name="email" placeholder="Your Email" required>
    <textarea class="form-control mb-3" name="message" placeholder="Message" required></textarea>
    <button class="btn btn-info w-100">Send</button>
  </form>

  <a href="/" class="btn-secondary mt-4 d-inline-block">â† Back to Home</a>
</section>

